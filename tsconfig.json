{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2015"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build" // Output directory for compiled files
  },
  "include": [
    "src/**/*.ts" // Include all TypeScript files in the src folder
  ]
}
